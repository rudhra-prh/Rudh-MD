  category: "Media",
  usage: `i9 <video link>`,
  react: "üì•",
  start: async (Miku, m, { pushName, prefix, args, text, mime }) => {
    if (!args[0])
      return Miku.sendMessage(
        m.from,
        { text: `·¥ò ü·¥á·¥ÄÍú±·¥á ·¥ò Ä·¥è·¥†…™·¥Ö·¥á ·¥Ä …™…¥Íú±·¥õ·¥Ä…¢ Ä·¥Ä·¥ç ·¥†…™·¥Ö·¥á·¥è  ü…™…¥·¥ã !` },
